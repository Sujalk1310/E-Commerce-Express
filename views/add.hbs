{{>opener}}
{{>navbar}}

<div class="main">
    <div class="intro">
        <p class="headline">Add Item</p>
        <p class="slogan">Please fill the form</p>
    </div>  
    <form class="form-inp" method="post" action="/add/">
        <span class="input-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" placeholder="Enter Product Name" required>
        </span>
        <span class="input-group">
            <label for="imgUrl">Image URL:</label>
            <input type="url" id="imgUrl" name="imgUrl" placeholder="Enter Product Image URL" required>
        </span>
        <span class="input-span">
            <span class="input-group">
                <label for="price">Price:</label>
                <input type="number" id="price" name="price" placeholder="Enter Product Price" required>
            </span>
            <button type="submit">
                <lord-icon
                    src="https://cdn.lordicon.com/wwmtsdzm.json"
                    trigger="hover"
                    stroke="bold"
                    style="width:60px;height:60px">
                </lord-icon>
            </button>
        </span>
    </form>
</div>

{{>closer}}